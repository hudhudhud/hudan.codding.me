.mask_layer {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
.modal_box {  
  min-width: 70%;  
  overflow: hidden;  
  position: fixed;  
  z-index: 1001;  
  background: #fafafa;  
  top:50%;
  left:50%;
  transform: translateX(-50%) translateY(-50%);
  border-radius: 3px;  
  padding:20rpx;
}  
.title {  
  padding: 10rpx;  
  text-align: center;  
  background-color: gazure;  
  font-size:.8rem;
}  
  
.content {  
  overflow-y: scroll; /*超出父盒子高度可滚动*/  
  margin:auto;
  width:100%;
  text-align: center;
}  
  
.btn {  
  width: 100%;  
  margin-top: 65rpx;  
  display: flex;  
  flex-direction: row;  
  align-items: center;  
  justify-content: space-between;  
  box-sizing: border-box;  
  background-color: white;  
}  
  
.cancel {  
  width: 100%;  
  padding: 10px;  
  text-align: center;  
  color: red;  
}  
  
.Sure {  
  width: 100%;  
  padding: 10px;  
  background-color: gainsboro;  
  text-align: center;  
}  
  
.modalMsg {  
  text-align: center;  
  margin-top: 45rpx;  
  display: block;  
}  