@import '/template/article/index.wxss';
@import '/template/topNavbar/index.wxss';
.outer{
  width:100%;
  overflow-x: hidden;
  height: 100%;
  xborder:2px solid;
  box-sizing: border-box;
}
.contain{
  display: flex;
  flex-direction: row;
  height: 100%;
 /* width:100%;
  height: calc(100% - 50px - 60rpx);
  margin-top:60rpx;
  position:relative;
  overflow-x: hidden;
  overflow-y:scroll;
  border:1px solid;
  box-sizing: border-box;
   */
  xborder:3px solid red;
  box-sizing: border-box;
  transition:margin-left .3s linear;
} 
.content{
  margin-left:0;
  box-sizing: border-box;
  width:100%;
  height: 100%;
  xborder:5px solid yellow;
  overflow-y:scroll;
  -webkit-overflow-scrolling: touch;
}
.swiper{
  height: 248rpx;
}
.slide-image{
  display: block;
  width:100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position:center;
  background-size: cover;
}
.bar{
  width:100%;
  height: 200rpx;
  box-sizing: border-box;
}
.bar view{
  display: inline-block;
  box-sizing: border-box;
  text-align: center;
  margin-top:40rpx;
}
.bar view text{
  text-align: center;
}
.bar view text:first-child{
   display: block;
   width:76rpx;
   height: 76rpx;
   border-radius: 50%;
   margin-left:50%;
   transform: translateX(-50%);
}
.list{
  margin-top:20rpx;
}
.list text.line{
  padding:24rpx 30rpx;
}
