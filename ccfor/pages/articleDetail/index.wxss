.spec {
  padding-top:18rpx;
  padding-bottom:18rpx;
  box-sizing: border-box;
}
.spec .sc{
  display: block;
  padding:26rpx 30rpx;
}
.spec .bg-gray{
  background-color: #fbfbfa;
}
.spec.mod{
  padding:0;
}
.spec view text{
 padding:16rpx 30rpx;
}
.spec view .spec-name{
  float: left;
}
.spec view .spec-qua{
  float: right;
}
.pl-bt{
  margin-bottom: 20rpx;
  width:100%;
}
.pl-bt text:nth-child(1){
  float:left;
}
.pl-bt text:nth-child(2){
  float:right;
}
.pls{
  margin-top:20rpx;
  width:100%;
  box-sizing: border-box;
  margin-bottom:100rpx;
}
.pls .pl{
  display: block;
  width:100%;
  box-sizing: border-box;
}
.pl  image{
  width:80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: top;
  border:5rpx solid #f8f8f8;
  margin-right: 10rpx;
}
.pl>.right{
  width:85%;
  display: inline-block;
  margin-top:10rpx;
  font-size:.6rem;
}
.pl>.right .pl-from{
  display: block;
  margin-bottom:18rpx;
}
.pl .hfs .hf{
  margin-top:10rpx;
  width:100%;
  box-sizing: border-box;
}
.pl .hfs{
  margin-top:10rpx;
  border-radius: 10rpx;
  padding:10rpx;
  box-sizing: border-box;
  background-color: #f1f1f1;
  width:100%;
}
.pl .hfs .hf-right{
  display: inline-block;
  width:80%;
}
.srpl{
  border-top: 1rpx solid #f1f1f1;
  position: fixed;
  bottom:0;
  width:100%;
  height: 100rpx;
  box-sizing: border-box;
  padding:20rpx 10rpx;
  background-color: white;
}
.srpl i{position: absolute;top:35%;left:10px;z-index: 100;}
.srpl input {
  background-color: #f1f1f1;
  border-radius: 5rpx;
  display: inline-block;
  height: 60rpx;
  width:100%;
  box-sizing: border-box;
  padding-left: 25px;
}
.pop-textarea{
  background-color: #f1f1f1;
  border-radius: 5rpx;
  display: inline-block;
  height: 150rpx;
  width:100%;
  box-sizing: border-box;
  padding-left: 10rpx;
  overflow-y: scroll;
  padding:0;
}
.pop{
  position: fixed;
  top:0;
  width:100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
}
