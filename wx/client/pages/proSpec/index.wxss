.content{
  width:100%;
  height:100%;
  background-color:#ebebeb;
}
.base-info{
  height: 40%;
  padding:20rpx;
  background: white;
}
.base-info .pro{
 display: flex;
 flex-direction: row;
}
.base-info .pro .img{
  width:150rpx;
  height:150rpx;
  border:1px solid rgba(0,0,0,0.2);
  box-sizing: border-box;
}
.base-info .pro .img image{
  max-width:100%;
  height: 100%;
}
.base-info .pro .info{
  font-size:33rpx;
  padding-left:25rpx;
}
.base-info .pro .info .price{
  display: block;
  color:#ff7d26;
  font-weight: 700;
  line-height: 1em;
  position:relative;
  padding-top:20rpx;
  font-size:30rpx;
}
.act{
  display: flex;
  flex-direction: row;
  border-top:1px solid rgba(0,0,0,0.1);
  margin:20rpx 0rpx;
  font-size: 28rpx;
  padding:30rpx 0;
  position: relative;
}
.act>.left{
  width:13%;
  text-align: left;
  color:rgba(0, 0, 0, 0.54);
}
.act .right{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.act .right .detail .ac-title{
  border:1rpx solid #ff7d26;
  color:#ff7d26;
  font-size: 24rpx;
  margin-right: 10rpx;
}
.act .right text:last-child{
  color:rgba(0, 0, 0, 0.87);
}

.spec{
  margin-top:20rpx;
  background: white;
  font-size: 30rpx;
  padding:20rpx;
}
.spec .spec-name{
  display: block;
  width:100%;
}
.spec .spec-name:nth-child(n+2){
  margin-top:25rpx;
  border-top:1rpx solid rgba(0,0,0,0.2);
  padding-top:20rpx;
}
.spec .spec-item{
   margin-top:25rpx;
   margin-bottom:25rpx;
}
.val-pri{
  margin-top:10rpx;
  padding-left:10rpx;
  padding-right:10rpx;
}
.val-pri,.val{
  border:1px solid rgba(0,0,0,0.3);
  height:70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}
.val-pri .pri{
  float: right;
}
.val{
 padding:20rpx;
 margin-right:10rpx;
}
.active{
  border:1px solid #ff7d26;
  color:#ff7d26;
}
.num{
  width:100%;
  height:150rpx;
  border-top:1px solid rgba(0,0,0,0.2);
  border-bottom:1px solid rgba(0,0,0,0.2);
  padding-top:10rpx;
  overflow: hidden;
  position: relative;
}
.num .left{
  float:left;
  line-height: 150rpx;
}
.num .right{
  border:1px solid rgba(0,0,0,0.2);
  box-sizing: border-box;
  position: absolute;
  top:50%;
  right:0;
  transform: translateY(-50%);  
}
.num .right text{
  display: inline-block;
  width:70rpx;
  height:70rpx;
  text-align:center;
  line-height: 70rpx;
  box-sizing: border-box;
}
.num .right .btn.minus{
  border-right:1rpx solid rgba(0,0,0,0.2);
}
.num .right .btn.add{
  border-left:1rpx solid rgba(0,0,0,0.2);
}
.num .right .btn.disable{
  color:rgba(0,0,0,0.2);
}
.commit{
  width:100%;
  height: 100rpx;
  background-color:#ff7d26;
  line-height: 100rpx;
  text-align: center;
  color:white;
  position: absolute;
  bottom:0;
}