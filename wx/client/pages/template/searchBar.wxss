.search{
  height:100rpx;
  display: flex;
  background-color: #ff6801;
  position:fixed;
  top:0;
  left:0;
  z-index: 99;
  width:100%;
  /* margin-bottom:100rpx; */
}
.img-clear, .img-search{
    width:50rpx;
    height: 50rpx;
    position:absolute;
    top:50%;
    transform: translateY(-50%);
    z-index: 99;
}
.img-search{
  left:50rpx;
}
.img-clear{
  right:50rpx;
}
.search input{
  border:1rpx solid rgba(0,0,0,0.1);
  border-radius: 20rpx;
  margin:auto;
  width:90%;
  height:70%;
  background-color:white;
  padding-left:80rpx;
  vertical-align: top;
  box-sizing: border-box;
}