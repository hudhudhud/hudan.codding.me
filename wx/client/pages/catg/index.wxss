.content{
  display: flex;
  flex-direction: row;
}
.left{
  width:20%;
  height:1200rpx;
}
::-webkit-scrollbar{
  width:0;
  height: 0;
  background-color:transparent;
}
.left text{
  display: block;
  width:100%;
  line-height: 100rpx;
  font-size:25rpx;
  height: 100rpx;
  text-align: center;
  transform: scale(1);
  transition:transform .1s linear;
}
.left text.active{
  color: #ff6801;
  transform: scale(1.5);
  transform-origin: center center;
}
.right{
  box-sizing: border-box;
  height:1200rpx;
}
.right .catg-pro{
  width:96%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin:2%;
}
.right .catg-pro:last-child{
  padding-bottom:80%
}
.right .catg-pro .catg-img{
  width:100%;
}
.right .catg-pro .catg-name{
  width:100%;
  text-align: center;
  font-size:30rpx;
  position:relative;
}
.right .catg-pro .catg-name:after,
.right .catg-pro .catg-name:before{
  content:"";
  position:absolute;
  border-top:1px solid #e0e0e0;
  width:40rpx;
  top:50%;
}
.right .catg-pro .catg-name:before{
  left:35%;
}
.right .catg-pro .catg-name:after{
  right:35%;
}
.right .catg-pro .item{
  width:33.33%;
  font-size:20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.right .catg-pro .item image,
.right .catg-pro .item p{
  width:80%;
  margin:auto;
  text-align: center;
}
.right .catg-pro .item image{
  height:200rpx;
}
.right .catg-pro .item p{
 white-space: nowrap;
 overflow: hidden;
}

myimg{
  width:100%;
}