@import "../template/searchBar.wxss";
page{
  width:100%;
  height:100%;
}
.content{
  width:100%;
  height: 100%;
  background-color:#ebebeb;
}
.pro-list,.search-label{
  width:100%;
  padding-top:100rpx;
}
.pro-list{
  background-color:#f5f5f5;
}
.search-label text{
    display: inline-block;
    background-color:white;
    padding:8rpx;
    padding-left:20rpx;
    padding-right: 20rpx;
    margin:10rpx;
    margin-left: 20rpx;
    margin-top:30rpx;
    font-size:24rpx;
    text-align: center;
    box-shadow: 1rpx 1rpx 1rpx 1rpx #e9e9e9;
}
.noPro{
  margin-top:100rpx;
  text-align: center;
  font-size:30rpx;
}
.noPro text{
  display: inline-block;
  margin-top:30rpx;
}
.search-his{
  margin-top:30rpx;
  width:100%;
  box-sizing: border-box;
}
.search-his text{
  display: block;
  font-size:25rpx;
  padding:10rpx;
  padding-left: 20rpx;
}
.search-his .ssls{
  color:gray;
}
.search-his .ls{
  background-color:white;
  line-height: 80rpx;
  font-size:30rpx;
  padding-left:20rpx;
  border-bottom:1rpx solid #ebebeb;
}
.search-his .qcls{
  line-height: 80rpx;
  background-color:white;
  text-align: center;
  color: #7e8a9a;
}
.show-input{
  margin-top:100rpx;
}
.show-input text{
  display: block;
  width:100%;
  background-color:white;
  line-height: 80rpx;
  font-size:30rpx;
  padding-left:20rpx;
  border-bottom:1rpx solid #ebebeb;
}
.pro{
  width:100%;
  height: 400rpx;
  margin-bottom:8rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.pro myimg{
  width:60%;
  height: 100%;
}
.pro myimg image{
  width:100%;
  height: 100%;
}
.pro .pro-info{
  border-bottom:1px solid #E4E4E4;
  height: 100%;
  width:60%;
  display: flex;
  box-sizing: border-box;
}
.pro .pro-info .info{
  margin:auto;
  display: flex;
  flex-direction: column; 
  font-size:24rpx;
  padding:0.8em;
}
.pro .pro-info text{
 padding-bottom:0.5em;
}
.pro .pro-info .pro-name{
  font-size:30rpx;
}
.pro .pro-info .pro-desc{
  color:#bcbcbc;
}
.pro .pro-info .pro-price:before{
  content:"\A5";
  color:#ff6801;
}
.pro .pro-info .pro-price{
  color:#ff6801;
  font-size:30rpx;
}
.loading{
  width:100%;
  font-size:20rpx;
  text-align:center;
  color:gray;
}