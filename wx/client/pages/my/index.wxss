 page{
  width:100%;
  height:calc(100% - 50px);
  background-color: #ebebeb;
 }
 .content{
  width:100%;
  height:100%;
  font-size:30rpx;
  margin-top:15rpx;
} 
.login-info,.menu,.setting{  
  margin-top:15rpx;
  padding:20rpx;
  background-color: white;
}
.login-info{
  width:100%;
  height: 150rpx;
  padding:20rpx;
}
.login-info .left{
  display: flex;
  flex-direction: row;
}
.login-info .left image{
    width:150rpx;
    height: 150rpx;
    border-radius: 10rpx;
}
.login-info .left .info{
   display: flex;
   flex-direction: column;
}
.login-info .left .info text{
  margin:20rpx 20rpx;
}
.login-info .left .info .mi-user{
  color:gray;
}
.menu{
  display: flex;
  flex-direction: column;
}
.menu text{
  border-bottom:1rpx solid rgba(0,0,0,0.2);
  padding:20rpx 0;
}
.setting{
  height: 30rpx;
  line-height:30rpx;
}
