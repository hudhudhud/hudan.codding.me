.content{
  width:100%;
  height: 100%;
  font-family: Helvetica Neue,Tahoma,Arial,PingFangSC-Regular,Hiragino Sans GB,Microsoft Yahei,sans-serif;
  background-color: #ebebeb;
}
.swiper {
  height: 825rpx;
  width: 100%;
}
.swiper swiper-item image {
  height:100%;
  width: 100%;
}
.info{
  padding:20rpx 33rpx;
  background-color: white;
}
.info text{
  display: block;
}
.name{
  font-size: 37rpx;
  color:rgb(60, 60, 60);
}
.desc{
  font-size: 24rpx;
  color:rgba(0, 0, 0, 0.54);
}
.price{
  color:#ff7d26;
  font-weight: 700;
  font-size:50rpx;
  padding-left:25rpx;
  line-height: 1em;
  position:relative;
  padding-top:20rpx;
}
.price:before{
  content:"\A5";
  font-size:40rpx;
  position: absolute;
  left: 0;
  top: 20rpx;
}
.oth-info,.user-eval,.detail-info{
 margin-top:9rpx;
 background-color: white;
}
.pro-info{
  display: flex;
  flex-direction: row;
  border-top:1px solid rgba(0,0,0,0.1);
  margin:auto 20rpx;
  font-size: 28rpx;
  padding:30rpx;
  position: relative;
}

.pro-info>.left{
  width:13%;
  text-align: left;
  color:rgba(0, 0, 0, 0.54);
}
.pro-info .right{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.pro-info .right .detail .ac-title{
  border:1rpx solid #ff7d26;
  color:#ff7d26;
  font-size: 24rpx;
  margin-right: 10rpx;
}
.pro-info .right .detail text{
  margin-right: 10rpx;
}
.pro-info .right .detail text.num{
  color:rgba(0,0,0,0.5);
}
.pro-info .right text:last-child{
  color:rgba(0, 0, 0, 0.87);
}
.pro-info.spec{
    margin-bottom:100rpx;
}
.pro-info.spec:after{
  content:"";
  position:absolute;
  right: 8rpx;
  top:50%;
  width:20rpx;
  height:20rpx;
  transform: translateY(-50%) rotate(135deg);
  border-left: 1px solid currentColor;
  border-top: 1px solid currentColor;
  
} 
.foot-btns{
  position: fixed;
  bottom:0;
  width:100%;
  height: 100rpx;
  background-color:white;
  font-size:40rpx;
  line-height: 100rpx;
}
.foot-btns .car{
  display: inline-block;
  position: relative;
  padding-right: 20rpx;
  padding-left: 20rpx;
  height: 100rpx;
  width:100rpx;
  box-sizing: border-box;
}
.foot-btns .car image{
  width:50rpx;
  height: 50rpx;
}
.foot-btns .car .num{
  font-size:20rpx;
  position: absolute;
  top:10rpx;
  right:20rpx;
  width:30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #ff6801;
  text-align: center;
  color:white;
  line-height: 30rpx;
}
.foot-btns>text{
  display: inline-block;
  width:calc((100% - 100rpx) / 2);
  text-align: center;
  color:white;
}
.foot-btns .addCar{
  background-color:#ff6801;
}
.foot-btns .buy{
  background-color:#ea5e3a;
}