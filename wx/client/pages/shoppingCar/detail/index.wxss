/* pages/shoppingCar/catg/index.wxss */
page{
  background-color: #ebebeb;
  width:100%;
  height: 100%;
}
.content{
  width:100%;
  height: 100%;
}
.title{
  font-size:25rpx;
  padding-left:20rpx;
  line-height: 50rpx;
}
.spec-item{
  background-color:white;
  border-bottom:1px solid #ebebeb;
  line-height: 100rpx;
  font-size:30rpx;
  padding-left:20rpx;
  padding-right:50rpx;
}
.pri{
  float:right;
  color:#ff6801;
}
.checked{
    float:right;
    color:#fff;
    margin-left:20rpx;
    line-height: 100rpx;
}
.checked.active{
  color:green;
}
.picker{
  background-color:#fff;
  margin-top:10rpx;
  padding-left:20rpx;
  padding-right:50rpx;
  font-size:30rpx;
  line-height: 100rpx;
}
.gmsl{
  float:left;
}
.num{
  float:right;
}
.btnSure,.btnDelete{
  width:90%;
  height: 80rpx;
  text-align: center;
  color:white;
  margin:auto;
  margin-top:30rpx;
  display: block;
  line-height: 80rpx;
}
.btnSure{
  background-color:#ff6801;
}
.btnDelete{
  background-color: #e64240;
}
.clearfix:after{
  content:"";
  display: block;
  clear:both;
}